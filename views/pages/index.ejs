<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bienvenido a Nodepop</title>
  <link rel="stylesheet" href="./stylesheets/reset.css">
  <link rel="stylesheet" href="./stylesheets/style.css">
  <link rel="stylesheet" href="./stylesheets/navigation.css">
  <link rel="stylesheet" href="./stylesheets/header.css">
  <link rel="stylesheet" href="./stylesheets/main.css">
  <link rel="stylesheet" href="./stylesheets/footer.css">

  <script type="text/javascript" src="./javascripts/scripts.js"></script>
</head>

<body>

  <!--Start Navigation-->
  <nav>
    <%- include('../includes/navigation'); %>
  </nav>
  <!--End Navigation-->

  <!--Start Header-->
  <header>
    <%- include('../includes/header'); %>
  </header>
  <!--End Header-->

  <!--Start main-->
  <main class="container">

    <!--Start Card Section-->
    <section>
      <h2 class="title-list">New Products</h2>
      <ul class="main-cards-list">
        <% advertisementList.forEach(function(advertisement) { %>
          <li class="card">
            <a href="#" class="card-link" target="_blank">
              <img src="./images/advertisements/<%=advertisement.photo%>"
                alt="<%=advertisement.photo%>">
              <div class="card-content">

                <p class="card-price">
                  <%= advertisement.price %><span> EUR</span>
                </p>
                <h2 class="card-title">
                  <%= advertisement.name %>
                </h2>

                <div class="info-details">
                  <p
                    class="advertisement-type <%= advertisement.sale ? 'background-sale' : 'background-purchase' %>">
                    <%= advertisement.sale ? 'Sale' : 'Purchase' %>
                  </p>
                  <p class="date"> Publication date:
                    <%= advertisement.createdAt %>
                  </p>
                </div>
                <div class="tags-details">
                  <% for (var i=0; i < advertisement.tags.length; i++) { %>
                    <a href="<%= advertisement.tags[i] %>" class="tag" target="_blank">
                      <%= advertisement.tags[i] %>
                    </a>
                    <% } %>
                </div>
              </div>
            </a>
          </li>
          <% }); %>
      </ul>
    </section>
    <!--End Card Section-->


  </main>
  <!--End main-->



  <!--Start footer-->
  <footer class="footer">
    <%- include('../includes/footer'); %>
  </footer>
  <!--End footer-->

</body>

</html>